{% extends 'base.html.twig' %}
{% block head %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
{% endblock %}
{% block title %}Hello ContactController!{% endblock %}

{% block body %}
    <div class="ctn container--contact">
        <a href="{{ path('home') }}" class="cta cta--back">Retour</a>
        <h1>Me contacter</h1>
        <div class="contact__form">
            {{ form_start(form) }}
            {% for message in app.flashes('success') %}
                <div class="alert alert-success mb-5">
                    {{ message }}
                </div>
            {% endfor %}

            {% if form_errors(form) %}
                <div class="alert alert-danger mb-5">
                    {{ form_errors(form) }}
                </div>
            {% endif %}

            <div class="form-group mb-5">
                <label for="email">{{ form_label(form.email) }}</label>
                {{ form_widget(form.email, { 'attr': { 'placeholder': 'votre@email.fr' } }) }}
            </div>
            <div class="form-group mb-5">
                <label for="message">{{ form_label(form.message) }}</label>
                {{ form_widget(form.message, { 'attr': { 'rows': 6, 'placeholder': 'Votre message' } }) }}
            </div>
            <div class="form-group">
                {{ form_widget(form.button, { 'attr': { 'class': 'cta cta--contact' }, 'label': 'Envoyer' }) }}
            </div>
            {{ form_end(form) }}
        </div>
        <hr>
        <div class="socials">
            <a class="cta socials__link" href="https://github.com/Lauric-h/" target="_blank">
                <i class="fab fa-github socials__logo"></i>
                Github
            </a>
            <a class="cta socials__link" href="https://www.linkedin.com/in/lauric/" target="_blank">
                <i class="fab fa-linkedin socials__logo"></i>
                Linkedin
            </a>
        </div>

    </div>
{% endblock %}
